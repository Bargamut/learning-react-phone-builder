{
    "env": {
        "browser": true,
        "es6": true
    },
		"extends": "eslint:recommended",
		"parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
				"indent": [
					"warn",
					"tab"
				],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "func-style": [
            "error",
            "declaration",
            { "allowArrowFunctions": true }
				],
				"react/jsx-uses-react": "error",
				"react/jsx-uses-vars": "error",
				"no-console": "off"
    }
}